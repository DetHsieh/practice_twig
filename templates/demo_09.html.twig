{% extends 'base.html.twig' %}

{% block container %}
    <div class="table-responsive">
        <table class="table table-bordered table-hover" border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Type</th>
                    <th>Name</th>
                    <th>etc.</th>
                </tr>
            </thead>
            <tbody>

            {# 愉快的rows要開始噴資料了。v。 #}
            {% for row in rows %}
            <tr>
                <td>{{ row.id }}</td>
                <td>{{ row.type|toStr }}</td>
                <td>{{ row.name }}</td>
                <td> <a href="#" class="btn btn-primary">喵喵</a> </td>
            </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
